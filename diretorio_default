'Retorna o diretório que será default onde ficam todos os arquivos que serão utilizados

Public Function diretorio_default(mes_ref)

ano = Year(Now)
ano_ant = ano - 1

'para mês de janeiro pegar o arquivo de dezembro do ano passado

nome_mes_ref = StrConv(MonthName(mes_ref), vbProperCase)

If mes_ref = 12 Then
    
    caminho = "\\tdbsbc01\Comum\ComumIT\" & ano_ant & "\Planning & Security\Security\SOX\CONTROLES PERIÓDICOS IT\" & mes_ref & " - " & Left(nome_mes_ref, 3) & Right(ano_ant, 2) & "\4 Usuários Ativos"
    

Else
   
   caminho = "\\tdbsbc01\Comum\ComumIT\" & ano & "\Planning & Security\Security\SOX\CONTROLES PERIÓDICOS IT\" & mes_ref & " - " & Left(nome_mes_ref, 3) & Right(ano, 2) & "\4 Usuários Ativos"
   
End If

diretorio_default = caminho

End Function
